    "version": "0.2.0",
    "configurations": [
        {
            "name": "PRODUCTION",
            "type": "dart",
            "request": "launch",
            "program": "lib/main_production.dart",
            "args":[		
                "--flavor",
                "production",
                "--debug",
			]
        },
        {
            "name": "DEVELOPMENT",
            "type": "dart",
            "request": "launch",
            "program": "lib/main_dev.dart",
            "args":[
                "--flavor",
                "dev",
                "--debug",
                "--verbose",
			]
        },
        {
            "name": "STAGING",
            "type": "dart",
            "request": "launch",
            "program": "lib/main_stagging.dart",
            "args":[
                "--flavor",
                "staging",
                "--debug",
			]
        },
        {
            "name": "PRODUCTION IOS",
            "type": "dart",
            "request": "launch",
            "program": "lib/main_production.dart",
            "args":[
                "--target",
                "lib/main_production.dart",
			]
        },
        {
            "name": "DEVELOPMENT IOS",
            "type": "dart",
            "request": "launch",
            "program": "lib/main_dev.dart",
            "args":[
                "--target",
                "lib/main_dev.dart"
			]
        },
        {
            "name": "STAGING IOS",
            "type": "dart",
            "request": "launch",
            "program": "lib/main_staging.dart",
            "args":[
                "--target",
                "lib/main_staging.dart"
			]
        }
    ]
    
    // APK
    // flutter build apk --split-per-abi --flavor dev -t lib/main_dev.dart --release
    // flutter build apk --split-per-abi --flavor staging -t lib/main_staging.dart --release
    // flutter build apk --split-per-abi --flavor production -t lib/main_production.dart --release

    // AppBundle
    // flutter build appbundle --flavor dev -t lib/main_dev.dart
    // flutter build appbundle --flavor staging -t lib/main_staging.dart
    // flutter build appbundle --flavor production -t lib/main_production.dart
}